# Colorize outputs in terminal (requires the "colorout" package)
require(colorout)

colorout::setOutputColors(
  index = 8, # gray
  normal = 7, # text

  number = 4, # blue
  negnum = 214, # orange
  zero = 6, zero.limit = 1, # light blue
  infinite = 5, # pink

  string = 3, # yellow
  date = 7, # text
  const = 214, # orange,

  true = 2, # green
  false = 1, # red

  warn = 214, # orange
  stderror = 1, # red
  error = 1, # red

  verbose = TRUE
)
